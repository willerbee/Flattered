{
  "name": "flattered-themes",
  "displayName": "Flattered",
  "description": "If you're a fan of a singular background color for any theme using the main editor's color to effectively make any theme a flat version, this is the extension for you",
  "version": "0.0.1",
  "publisher": "Wilmon Agulo",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flattered.apply",
        "title": "Flattered: Apply to Current Theme"
      },
      {
        "command": "flattered.reset",
        "title": "Flattered: Reset Current Theme"
      }
    ],
    "configuration": {
      "title": "Flattered Themes",
      "properties": {
        "flattered.enabled": {
          "order": 0,
          "type": "boolean",
          "default": true,
          "description": "Enable Flattered."
        },
        "flattered.autoApply": {
          "order": 1,
          "type": "boolean",
          "default": false,
          "description": "Enable automatic apply Flattered on theme change, workbench.colorCustomizations, or Flatter setting change."
        },
        "flattered.customColor": {
          "order": 2,
          "type": "string",
          "default": "",
          "description": "Custom color (hex) to use. Leave blank to use editor background color."
        },
        "flattered.applyTo.titleBar": {
          "order": 3,
          "type": "boolean",
          "default": true,
          "description": "Apply Flattered color to title bar"
        },
        "flattered.applyTo.tabs": {
          "order": 4,
          "type": "boolean",
          "default": true,
          "description": "Apply Flattered color to editor tabs"
        },
        "flattered.applyTo.activityBar": {
          "order": 5,
          "type": "boolean",
          "default": true,
          "description": "Apply Flattered color to activity bar"
        }, 
        "flattered.applyTo.sideBar": {
          "order": 6,
          "type": "boolean",
          "default": true,
          "description": "Apply Flattered color to sidebar"
        },
        "flattered.applyTo.panel": {
          "order": 7,
          "type": "boolean",
          "default": true,
          "description": "Apply Flattered color to bottom panel"
        },
        "flattered.applyTo.terminal": {
          "order": 8,
          "type": "boolean",
          "default": true,
          "description": "Apply Flattered color to integrated terminal"
        },
        "flattered.applyTo.statusBar": {
          "order": 9,
          "type": "boolean",
          "default": true,
          "description": "Apply Flattered color to status bar"
        },
        "flattered.applyTo.borders": {
          "order": 10,
          "type": "boolean",
          "default": true,
          "description": "Also apply on related borders"
        },
        "flattered.backupColorCustomizations": {
          "type":"object",
          "default": {},
          "description": "Tracked backup customizations before applying in workbench.colorCustomizations"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  }
}
